<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/Pokedex/public/img/favicon.png">
    <link rel="stylesheet" href="css/style.css" type="text/css">
    <title>Pokedex</title>
</head>
<body>
    <header>
        <h1>Pokedex</h1>
    </header>
    <main>
        <section id="nav">
            <nav>
                <ul>
                    <li><img src="https://www.pngmart.com/files/2/Pokeball-PNG-Image.png" alt="pokebola"></li>
                    <li><a href="/home">Home</a></li>
                    <li><a href="/cadastro">Cadastre</a></li>
                    <li><a href="/detalhes">Detalhes</a></li>
                </ul>
            </nav>
        </section>
        <section id="cards">
            <h2>Cards dos Pokemons!</h2>
            <% pokedex.forEach((pokemon) => { %>
            <div class="card">
                <img src="<%= pokemon.imagem %>" alt="pokemon">
                <h2><%= pokemon.nome %></h2>
                <p id="tipo">Tipo: <%= pokemon.tipo %></p>
                <% if (vari == 1) { %>
                <a href="/detalhes/<%= pokemon.numero %>">Detalhes</a>
                <% } %>
            </div>
        <% }) %>

        
        </section>
        
    </main>
    <footer>
        <h4>Pokedex by Iulia Mitch</h4>
        <a href="https://github.com/IuliaMitch" Target="_blank">Github</a>
    </footer>

    
    <script src="js/script.js"></script>
</body>
</html>